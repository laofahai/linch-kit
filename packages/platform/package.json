{
  "name": "@linch-kit/platform",
  "version": "1.2.0",
  "description": "LinchKit business development platform - integrates CRUD, tRPC, and validation capabilities",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./trpc": {
      "types": "./dist/trpc.d.ts",
      "import": "./dist/trpc.mjs",
      "require": "./dist/trpc.js"
    },
    "./validation": {
      "types": "./dist/validation.d.ts",
      "import": "./dist/validation.mjs",
      "require": "./dist/validation.js"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage"
  },
  "keywords": [
    "linchkit",
    "platform",
    "crud",
    "trpc",
    "validation",
    "business-logic"
  ],
  "author": "LinchKit Team",
  "license": "MIT",
  "dependencies": {
    "@linch-kit/core": "workspace:*",
    "@linch-kit/ui": "workspace:*",
    "@trpc/server": "^11.0.0",
    "@trpc/client": "^11.0.0",
    "zod": "^3.22.0",
    "eventemitter3": "^5.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.8.3",
    "tsup": "^8.0.0",
    "bun-types": "latest"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "next": "^13.0.0 || ^14.0.0 || ^15.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
