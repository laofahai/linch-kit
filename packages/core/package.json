{
  "name": "@linch-kit/core",
  "version": "2.0.2",
  "description": "LinchKit 基础设施包 - 插件系统、配置管理、可观测性",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.mjs",
      "require": "./dist/client.js"
    },
    "./extension": {
      "types": "./dist/extension-client.d.ts",
      "import": "./dist/extension-client.mjs",
      "require": "./dist/extension-client.js"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.mjs",
      "require": "./dist/cli.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.mjs",
      "require": "./dist/server.js"
    },
    "./providers": {
      "types": "./dist/providers.d.ts",
      "import": "./dist/providers.mjs",
      "require": "./dist/providers.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "build:packages": "tsup",
    "dev": "tsup --watch",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix"
  },
  "keywords": [
    "linchkit",
    "core",
    "infrastructure",
    "plugin-system",
    "configuration",
    "observability"
  ],
  "author": "LinchKit Team",
  "license": "MIT",
  "devDependencies": {
    "@types/convict": "^6.1.6",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.0.7",
    "@types/lodash-es": "^4.17.12",
    "@types/react": "^18.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "yaml": "^2.8.0"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.12.1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-jaeger": "^2.0.1",
    "@opentelemetry/exporter-prometheus": "^0.202.0",
    "@opentelemetry/instrumentation": "^0.202.0",
    "@opentelemetry/sdk-node": "^0.202.0",
    "chokidar": "^4.0.3",
    "commander": "^14.0.0",
    "convict": "^6.2.4",
    "eventemitter3": "^5.0.1",
    "lru-cache": "^11.1.0",
    "pino": "^9.7.0",
    "prom-client": "^15.1.3",
    "lodash-es": "^4.17.21",
    "isolated-vm": "^6.0.0"
  },
  "peerDependencies": {
    "zod": "^3.23.0",
    "react": "^18.0.0",
    "@tanstack/react-query": "^5.0.0",
    "next-themes": "^0.3.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": false
    },
    "react": {
      "optional": true
    },
    "@tanstack/react-query": {
      "optional": true
    },
    "next-themes": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
