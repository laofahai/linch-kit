{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": false,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "isolatedModules": false,
    "preserveValueImports": false,
    "strict": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx", 
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/__tests__/**",
    "src/adapters/database-permission-adapter.ts",
    "src/permissions/enhanced-permission-engine-v2.ts",
    "src/entities/**/*",
    "src/examples/**/*",
    "src/infrastructure/**/*",
    "src/plugin.ts"
  ]
}