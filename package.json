{
  "name": "linch-kit",
  "private": true,
  "type": "module",
  "description": "AI-First 全栈开发工具包",
  "keywords": [
    "linch-kit",
    "ai-first",
    "typescript",
    "monorepo",
    "trpc",
    "full-stack"
  ],
  "author": "laofahai",
  "license": "MIT",
  "homepage": "https://github.com/laofahai/linch-kit",
  "repository": {
    "type": "git",
    "url": "https://github.com/laofahai/linch-kit.git"
  },
  "scripts": {
    "linch": "bun packages/core/dist/cli.js",
    "build": "bun run ai:guardian:validate 'build session' && turbo run build",
    "build:packages": "turbo run build:packages --filter='./packages/*'",
    "build:apps": "turbo run build --filter='./apps/*'",
    "build:watch": "turbo run build:packages --filter='./packages/*' --watch",
    "dev": "bun run ai:guardian:validate 'development session' && bun scripts/dev-tools.js dev",
    "dev:apps": "turbo run dev --parallel",
    "dev:packages": "turbo run build:packages --filter='./packages/*' --watch",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format",
    "format:fix": "turbo run format:fix",
    "check-types": "turbo run check-types",
    "test": "bun run ai:guardian:validate 'test session' && turbo run test --concurrency=1",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "clean": "turbo run clean && rm -rf node_modules/.cache",
    "clean:dist": "turbo run clean:dist",
    "clean:node_modules": "find . -name 'node_modules' -type d -exec rm -rf {} + 2>/dev/null || true",
    "reset": "bun run clean:dist && bun run clean:node_modules && bun install",
    "deps:graph": "bun tools/dev/deps-graph.ts",
    "deps:check": "bun tools/ai-platform/scripts/deps-check.js",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "release": "bun scripts/release.js",
    "release:dry": "bun scripts/release.js --dry-run",
    "version": "changeset version && bun install --lockfile-only",
    "ci": "bun install --frozen-lockfile && bun run build && bun run test && bun run lint",
    "prepare": "husky install",
    "ai:guardian:validate": "bun tools/ai-platform/scripts/guardian-validate.js",
    "ai:pre-check": "bun tools/ai-platform/scripts/pre-check.js",
    "ai:quality-gate": "bun tools/ai-platform/scripts/quality-gate.js",
    "ai:context-verify": "bun tools/ai-platform/scripts/context-verifier.js verify",
    "setup": "bun scripts/update-all-configs.js && bun install",
    "validate:light": "bun run format:fix && bun run lint:fix",
    "validate": "bun run format:fix && bun run lint:fix && bun run check-types && bun run build:packages && bun run test",
    "validate:ci": "bun run validate",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "format:all": "prettier --write \"**/*.{ts,tsx,md,json}\" --ignore-unknown",
    "test:e2e": "playwright test",
    "test:e2e:all": "bun tools/testing/test-e2e-all.ts",
    "ai:session": "bun tools/ai-platform/scripts/session-tools.js",
    "arch:check": "bun tools/ai-platform/scripts/arch-check.js",
    "arch:enforce": "bun tools/ai-platform/scripts/arch-check.js --strict",
    "meta:monitor": "bun tools/ai-platform/scripts/meta-learner.js monitor",
    "meta:analyze": "bun tools/ai-platform/scripts/meta-learner.js analyze",
    "meta:report": "bun tools/ai-platform/scripts/meta-learner.js report",
    "meta:optimize": "bun tools/ai-platform/scripts/meta-learner.js optimize",
    "context:verify": "bun tools/ai-platform/scripts/context-verifier.js verify",
    "context:snapshot": "bun tools/ai-platform/scripts/context-verifier.js snapshot",
    "context:drift": "bun tools/ai-platform/scripts/context-verifier.js drift",
    "context:report": "bun tools/ai-platform/scripts/context-verifier.js report",
    "security:scan": "bun tools/ai-platform/scripts/security-sentinel.js scan",
    "security:audit": "bun tools/ai-platform/scripts/security-sentinel.js audit",
    "security:assess": "bun tools/ai-platform/scripts/security-sentinel.js assess",
    "security:quarantine": "bun tools/ai-platform/scripts/security-sentinel.js quarantine",
    "qa:analyze": "bun tools/ai-platform/scripts/qa-synthesizer.js analyze",
    "qa:generate": "bun tools/ai-platform/scripts/qa-synthesizer.js generate",
    "qa:batch": "bun tools/ai-platform/scripts/qa-synthesizer.js batch",
    "qa:report": "bun tools/ai-platform/scripts/qa-synthesizer.js report",
    "council:decide": "bun tools/ai-platform/scripts/decision-council.js decide",
    "council:analyze": "bun tools/ai-platform/scripts/decision-council.js analyze",
    "council:history": "bun tools/ai-platform/scripts/decision-council.js history",
    "council:report": "bun tools/ai-platform/scripts/decision-council.js report",
    "council:stats": "bun tools/ai-platform/scripts/decision-council.js stats",
    "evolution:detect": "bun tools/ai-platform/scripts/evolution-engine.js detect",
    "evolution:patterns": "bun tools/ai-platform/scripts/evolution-engine.js patterns",
    "evolution:assess": "bun tools/ai-platform/scripts/evolution-engine.js assess",
    "evolution:plan": "bun tools/ai-platform/scripts/evolution-engine.js plan",
    "evolution:evolve": "bun tools/ai-platform/scripts/evolution-engine.js evolve",
    "evolution:status": "bun tools/ai-platform/scripts/evolution-engine.js status",
    "evolution:history": "bun tools/ai-platform/scripts/evolution-engine.js history",
    "evolution:stats": "bun tools/ai-platform/scripts/evolution-engine.js stats",
    "emergency:rollback": "echo '⚠️ 警告: 此操作将丢失未提交的更改! 请先提交重要工作' && read -p '确认继续? (y/N): ' confirm && [[ $confirm == [yY] ]] && git reset --hard HEAD~1 || echo '操作已取消'",
    "validate:strict": "tsc --noEmit && eslint . --max-warnings=0 && bun test --coverage"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.5",
    "@eslint/js": "^9.30.0",
    "@next/eslint-plugin-next": "^15.3.5",
    "@playwright/test": "^1.53.2",
    "@types/lodash-es": "^4.17.12",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "chokidar": "^4.0.3",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "jest": "^30.0.3",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "packageManager": "bun@1.2.18",
  "engines": {
    "node": ">=18",
    "bun": ">=1.0"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "**/*.{md,json}": "prettier --write"
  },
  "dependencies": {
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "dayjs": "^1.11.13"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "extensions/*",
    "tools/*"
  ],
  "trustedDependencies": [
    "@tailwindcss/oxide",
    "protobufjs",
    "unrs-resolver"
  ]
}
