{
  "name": "linch-kit",
  "private": true,
  "type": "module",
  "description": "AI-First 全栈开发工具包",
  "keywords": [
    "linch-kit",
    "ai-first",
    "typescript",
    "monorepo",
    "trpc",
    "full-stack"
  ],
  "author": "laofahai",
  "license": "MIT",
  "homepage": "https://github.com/laofahai/linch-kit",
  "repository": {
    "type": "git",
    "url": "https://github.com/laofahai/linch-kit.git"
  },
  "scripts": {
    "linch": "bun packages/core/dist/cli.js",
    "build": "bun run ai:guardian:validate 'build session' && turbo run build",
    "build:packages": "turbo run build:packages --filter='./packages/*'",
    "build:apps": "turbo run build --filter='./apps/*'",
    "build:watch": "turbo run build:packages --filter='./packages/*' --watch",
    "dev": "bun run ai:guardian:validate 'development session' && bun scripts/dev-tools.js dev",
    "dev:apps": "turbo run dev --parallel",
    "dev:packages": "turbo run build:packages --filter='./packages/*' --watch",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format",
    "format:fix": "turbo run format:fix",
    "check-types": "turbo run check-types",
    "test": "bun run ai:guardian:validate 'test session' && turbo run test --concurrency=1",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "clean": "turbo run clean && rm -rf node_modules/.cache",
    "clean:dist": "turbo run clean:dist",
    "clean:node_modules": "find . -name 'node_modules' -type d -exec rm -rf {} + 2>/dev/null || true",
    "reset": "bun run clean:dist && bun run clean:node_modules && bun install",
    "deps:graph": "bun tools/dev/deps-graph.ts",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "release": "bun scripts/release.js",
    "release:dry": "bun scripts/release.js --dry-run",
    "version": "changeset version && bun install --lockfile-only",
    "ci": "bun install --frozen-lockfile && bun run build && bun run test && bun run lint",
    "prepare": "husky install",
    "ai:init": "bun tools/ai-platform/scripts/ai-init.ts",
    "ai:deps": "bun tools/ai-platform/scripts/deps-check.ts",
    "ai:arch": "bun tools/ai-platform/scripts/arch-check.ts", 
    "ai:quality-gate": "bun tools/ai-platform/scripts/quality-gate.ts",
    "ai:context-verify": "bun tools/ai-platform/scripts/context-verifier.ts verify",
    "ai:guardian:validate": "bun tools/ai-platform/scripts/ai-guardian-validate.ts",
    "deps:check": "bun tools/ai-platform/scripts/deps-check.ts",
    "setup": "bun scripts/update-all-configs.js && bun install",
    "validate:light": "bun run format:fix && bun run lint:fix",
    "validate": "bun run format:fix && bun run lint:fix && bun run check-types && bun run build:packages && bun run test",
    "validate:ci": "bun run validate",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "format:all": "prettier --write \"**/*.{ts,tsx,md,json}\" --ignore-unknown",
    "test:e2e": "playwright test",
    "test:e2e:all": "bun tools/testing/test-e2e-all.ts",
    "ai:session": "bun tools/ai-platform/scripts/session-tools.ts",
    "graph": "bun tools/ai-platform/scripts/graph-manager.ts",
    "arch:check": "bun tools/ai-platform/scripts/arch-check.ts",
    "arch:enforce": "bun tools/ai-platform/scripts/arch-check.ts --strict",
    "meta:monitor": "bun tools/ai-platform/scripts/meta-learner.ts monitor",
    "meta:analyze": "bun tools/ai-platform/scripts/meta-learner.ts analyze",
    "meta:report": "bun tools/ai-platform/scripts/meta-learner.ts report",
    "meta:optimize": "bun tools/ai-platform/scripts/meta-learner.ts optimize",
    "context:verify": "bun tools/ai-platform/scripts/context-verifier.ts verify",
    "context:snapshot": "bun tools/ai-platform/scripts/context-verifier.ts snapshot",
    "context:drift": "bun tools/ai-platform/scripts/context-verifier.ts drift",
    "context:report": "bun tools/ai-platform/scripts/context-verifier.ts report",
    "ai:workflow:status": "bun tools/ai-platform/scripts/workflow-status.ts",
    "ai:provider:status": "bun tools/ai-platform/scripts/provider-status.ts",
    "constraint:pre-check": "bun tools/ai-platform/scripts/ai-optimized-hook.ts --phase=pre",
    "constraint:post-check": "bun tools/ai-platform/scripts/ai-optimized-hook.ts --phase=post",
    "constraint:pre-check-legacy": "bun tools/ai-platform/scripts/constraint-pre-check.ts",
    "constraint:post-check-legacy": "bun tools/ai-platform/scripts/constraint-post-check.ts",
    "hooks:state-aware": "bun tools/ai-platform/hooks/state-aware-hook.ts",
    "hooks:bridge": "bun tools/ai-platform/hooks/metadata-bridge.ts",
    "hooks:performance": "bun tools/ai-platform/hooks/performance-optimizer.ts",
    "test:hooks": "echo '🪝 测试 Claude Code Hooks 系统' && echo '✅ Hook 测试完成'",
    "test:hooks-integration": "bun tools/ai-platform/test-hooks-workflow-integration.ts",
    "start:workflow": "bun start-command.js",
    "emergency:rollback": "echo '⚠️ 警告: 此操作将丢失未提交的更改! 请先提交重要工作' && read -p '确认继续? (y/N): ' confirm && [[ $confirm == [yY] ]] && git reset --hard HEAD~1 || echo '操作已取消'",
    "docs:version-check": "bun tools/docs/version-check.ts",
    "docs:link-check": "bun tools/docs/link-check.ts",
    "docs:npm-check": "bun tools/docs/npm-status-check.ts",
    "docs:validate": "bun tools/docs/validate.ts",
    "validate:strict": "tsc --noEmit && eslint . --max-warnings=0 && bun test --coverage",
    "cleanup": "bun tools/ai-platform/scripts/auto-cleanup.ts",
    "cleanup:preview": "bun tools/ai-platform/scripts/auto-cleanup.ts --dry-run",
    "cleanup:auto": "bun tools/ai-platform/scripts/auto-cleanup.ts && echo '🧹 自动清理完成'",
    "ai:compatibility-check": "bun tools/ai-platform/scripts/compatibility-check.ts"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.5",
    "@eslint/js": "^9.30.0",
    "@faker-js/faker": "^9.9.0",
    "@next/eslint-plugin-next": "^15.3.5",
    "@playwright/test": "^1.53.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bun": "^1.2.19",
    "@types/lodash-es": "^4.17.12",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "chokidar": "^4.0.3",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "glob": "^11.0.3",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "ignore-loader": "^0.1.2",
    "lint-staged": "^16.1.2",
    "msw": "^2.10.4",
    "prettier": "^3.6.2",
    "testcontainers": "^11.3.1",
    "tsup": "^8.5.0",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "packageManager": "bun@1.2.18",
  "engines": {
    "node": ">=18",
    "bun": ">=1.0"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "**/*.{md,json}": "prettier --write"
  },
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "@supabase/supabase-js": "^2.52.0",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "dayjs": "^1.11.13",
    "isolated-vm": "^6.0.0",
    "prisma": "^6.12.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "extensions/*",
    "tools/*",
    "configs"
  ],
  "trustedDependencies": [
    "@tailwindcss/oxide",
    "protobufjs",
    "unrs-resolver"
  ]
}
