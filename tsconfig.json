{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "module": "esnext",
    "target": "es2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "jsx": "preserve",
    "jsxImportSource": "react",
    "allowJs": true,
    "baseUrl": ".",
    "sourceMap": true,
    "paths": {
      "@linch-kit/core": ["packages/core/src"],
      "@linch-kit/ui": ["packages/ui/src"],
      "@linch-kit/auth": ["packages/auth/src"],
      "@linch-kit/platform": ["packages/platform/src"],
      "@linch-kit/shared-types": ["packages/shared-types/src"],
      "@linch-kit/starter": ["packages/starter/src"],
      "@linch-kit/ui/shadcn": ["packages/ui/src/components/ui/index.ts"],
      "@linch-kit/ui/shadcn/*": ["packages/ui/src/components/ui/*"]
    }
  },
  "include": [
    "./packages/**/*.{ts,tsx,d.ts}",
    "./apps/**/*.{ts,tsx,d.ts}",
    "./modules/**/*.{ts,tsx,d.ts}",
    "./extensions/**/*.{ts,tsx,d.ts}",
    "./scripts/**/*.{ts,tsx}",
    "./e2e/**/*.{ts,tsx}",
    "./configs/**/*.{ts,tsx,d.ts}",
    "./*.{ts,tsx}",
    "./playwright.config.ts"
  ],
  "references": [
    { "path": "packages/core" },
    { "path": "packages/auth" },
    { "path": "packages/ui" },
    { "path": "packages/platform" },
    { "path": "packages/shared-types" },
    { "path": "packages/starter" },
    { "path": "extensions/console" }
  ]
}
