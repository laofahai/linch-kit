# LinchKit AI Platform Environment Configuration
# Copy this file to .env and fill in your actual values

# ===== Gemini API Configuration =====
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY="your-gemini-api-key-here"

# Gemini model to use (optional, defaults to gemini-1.5-flash)
GEMINI_MODEL="gemini-1.5-flash"

# ===== AI System Configuration =====
# System instruction for AI (optional)
AI_SYSTEM_INSTRUCTION="You are an expert AI assistant for the LinchKit framework. Provide accurate, helpful responses for software development tasks."

# AI timeout in milliseconds (optional, defaults to 60000)
AI_TIMEOUT="60000"

# Primary AI provider (optional, defaults to gemini-sdk)
AI_PRIMARY_PROVIDER="gemini-sdk"

# Fallback providers (optional, comma-separated)
AI_FALLBACK_PROVIDERS=""

# Enable rule-based fallback (optional, defaults to true)
AI_ENABLE_RULE_FALLBACK="true"

# ===== Qdrant Vector Store Configuration =====
# Qdrant server URL (for Graph RAG)
QDRANT_URL="http://localhost:6333"

# Qdrant API key (if authentication is enabled)
QDRANT_API_KEY=""

# Collection name for vector storage
QDRANT_COLLECTION="linchkit_codebase"

# ===== Graph RAG Configuration =====
# Enable Graph RAG queries
GRAPH_RAG_ENABLED="true"

# Graph RAG timeout in milliseconds
GRAPH_RAG_TIMEOUT="30000"

# ===== Development Configuration =====
# Enable debug logging
DEBUG="linchkit:*"

# Log level (error, warn, info, debug)
LOG_LEVEL="info"

# ===== Security Configuration =====
# Disable if you want to allow potentially unsafe commands
COMMAND_INJECTION_PROTECTION="true"

# Maximum buffer size for command execution (in bytes)
MAX_COMMAND_BUFFER="5242880"