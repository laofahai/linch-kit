# LinchKit Development Environment Configuration

# ======================
# 🗄️ 数据库配置
# ======================

# PostgreSQL 主数据库
DATABASE_URL="postgresql://linchkit:linchkit_dev_password@localhost:5432/linchkit_dev"
DIRECT_URL="postgresql://linchkit:linchkit_dev_password@localhost:5432/linchkit_dev"

# Neo4j 图数据库 (AI 知识图谱)
NEO4J_CONNECTION_URI="neo4j://localhost:7687"
NEO4J_USERNAME="neo4j"
NEO4J_PASSWORD="linchkit_neo4j_password"
NEO4J_DATABASE="linchkit"

# Redis 缓存
REDIS_URL="redis://localhost:6379"

# ======================
# 🔐 认证配置
# ======================

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="linchkit-development-secret-key-minimum-32-characters-long"

# 开发用户 (Console 管理员)
CONSOLE_ADMIN_EMAIL="admin@linchkit.dev"
CONSOLE_ADMIN_PASSWORD="admin123"

# ======================
# 🌐 应用配置
# ======================

# 应用基础配置
NODE_ENV="development"
APP_ENV="development"
APP_NAME="LinchKit"
APP_VERSION="7.2"
PORT="3000"
HOST="0.0.0.0"

# 日志配置
LOG_LEVEL="debug"
LOG_FORMAT="pretty"

# ======================
# 🧠 AI 服务配置
# ======================

# AI Session 工具
AI_SESSION_ENABLED="true"

# 图谱同步配置
GRAPH_SYNC_ENABLED="true"
GRAPH_SYNC_INTERVAL="3600"

# 查询引擎配置
QUERY_ENGINE_TIMEOUT="30"
QUERY_CACHE_ENABLED="true"

# ======================
# 🔧 开发工具配置
# ======================

# tRPC 开发配置
ENABLE_TRPC_PLAYGROUND="true"

# 构建配置
DEV_TURBO="true"
DEV_HOT_RELOAD="true"

# UI 配置
DEFAULT_THEME="light"
THEME_SWITCHING_ENABLED="true"
UI_ANIMATION_ENABLED="true"

# ======================
# 🏢 多租户配置
# ======================

# 多租户功能
MULTITENANCY_ENABLED="true"
DEFAULT_TENANT="default"
TENANT_ISOLATION_LEVEL="database"

# 权限系统
PERMISSIONS_ENABLED="true"
DEFAULT_USER_ROLE="USER"
ADMIN_EMAIL="admin@linchkit.dev"
PERMISSIONS_CACHE_TTL="3600"

# ======================
# 📧 开发邮件配置 (可选)
# ======================

EMAIL_ENABLED="false"
SMTP_HOST="localhost"
SMTP_PORT="1025"
SMTP_FROM="noreply@linchkit.dev"

# ======================
# 📁 文件存储配置
# ======================

UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="10485760"
ALLOWED_FILE_TYPES="jpg,jpeg,png,gif,pdf,doc,docx"
CLOUD_STORAGE_ENABLED="false"

# ======================
# 🔍 监控配置
# ======================

# 健康检查
HEALTH_CHECK_ENABLED="true"
HEALTH_CHECK_PATH="/health"

# OpenTelemetry (开发环境关闭)
OTEL_ENABLED="false"

# 速率限制
RATE_LIMIT_ENABLED="true"
RATE_LIMIT_MAX="1000"