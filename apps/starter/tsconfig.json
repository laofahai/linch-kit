{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "lib": [
      "dom",
      "dom.iterable",
      "es2022"
    ],
    // 🔴 超严格类型检查
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "exactOptionalPropertyTypes": true,
    // 🔴 严格的未使用变量检查
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    // 🔴 AI代码生成安全检查
    "useUnknownInCatchVariables": true,
    // Next.js 插件
    "plugins": [
      {
        "name": "next"
      }
    ],
    // 路径映射
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@linch-kit/*": [
        "../../packages/*/dist",
        "../../packages/*/src",
        "../../extensions/*/dist", 
        "../../extensions/*/src"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "config/**/*.ts",
    "config/**/*.tsx",
    "next.config.ts",
    "tailwind.config.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "../../packages/*/src/**/*",
    "../../extensions/*/src/**/*",
    "../../tools/*/src/**/*"
  ]
}
