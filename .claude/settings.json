{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bun run hooks:pre",
            "description": "🚨 零容忍约束检查 - 违规即阻止操作",
            "timeout": 30
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write", 
        "hooks": [
          {
            "type": "command",
            "command": "bun run hooks:post",
            "description": "🚨 零容忍质量门禁 - 违规即阻止继续",
            "timeout": 30
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "echo '🔄 AI Workflow 状态检查 - Essential Rules 强制执行中'"
          }
        ]
      }
    ]
  }
}